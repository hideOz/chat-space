.side-bar
  .side-bar__top
    .side-bar__top__box
      %p.side-bar__top__box__name
        = current_user.name
      %ul.side-bar__top__box__icons
        %li.side-bar__top__box__new-group
          = link_to new_group_path do
            = icon('fas', 'edit')
        %li.side-bar__top__box__edit
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')


  .side-bar__groups
    - current_user.groups.each do |group|
      .side-bar__groups__group
        = link_to '#' do
          %p.side-bar__groups__group__group-name
            = group.name
          %p.side-bar__groups__group__latest-message
            まだメッセージがありません
